<%- include ('../partials/header') %>
<h1 style = "text-align:center;"">Add New Comment to <%=campground.name%> Posts </h1>
<div class="row">
  <div class="container" style="width: 25em; margin: 0 auto; ">
    <form action="/campgrounds/<%= campground._id%>/comment" method="POST">
      <div class="form-group">
        <input
          class=" form-control"
          type="text"
          placeholder="enter text"
          name="comment[text]"
          id=""
        />
      </div>
      <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit</button></div>
    </form>
    <a href="/campgrounds">GO BACK</a>
  </div>
</div>


<%- include ('../partials/footer') %>
